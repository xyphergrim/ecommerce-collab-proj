<% layout("layouts/boilerplate") -%>

<!-- Flash Messages -->
<% if(error && error.length > 0){ %>
<div id="flash" class="alert alert-danger" role="alert">
    <%= error %>
</div>
<% } %>
<% if(success && success.length > 0){ %>
<div id="flash" class="alert alert-success" role="alert">
    <%= success %>
</div>
<% } %>
<% if(info && info.length > 0){ %>
<div id="flash" class="alert alert-info" role="alert">
    <%= info %>
</div>
<% } %>

<div class="container">
    <h1>Reset Password</h1>
</div>
<div class="container">
    <form action="/user/reset/<%= resetPasswordToken %>" method="POST">
      <div class="form-group">
        <label for="password">New Password</label>
        <input type="password" class="form-control" name="password" placeholder="New Password" autofocus>
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" autofocus>
      </div>
      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
</div>
